.posts(infinite-scroll='loadMoreItems()' infinite-scroll-distance='500' infinite-scroll-disabled='fetching')
    .post(ng-repeat="item in items")
        .post-header
            img.photo(src='{{ item.originPhoto }}')
            .info
                .source-name {{ item.originName }}
                .post-date {{ item.date | date: 'dd/MM/yyyy HH:mm:ss' }}
            .like.icon.icon-star-empty
            .source(ng-style='item.client.htmlColor()') {{ item.client.type }}
        .text {{ item.text }}
